.m-add-new {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--text-color-white);
  background-color: var(--dark-background-color-l);
  backdrop-filter: blur(10px);
}

.add-new-box {
  box-sizing: border-box;
  width: 70%;
  padding: 20px 0 8px 0;
  border: 1px solid var(--dark-theme-color);
  border-radius: 5px;
}

.add-new-header {
  position: relative;
  margin: 0 18px;
  display: flex;
}

.clear-icon {
  flex: 1;
  text-align: left;
}

.add-new-title {
  position: absolute;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}

.add-new-confirm {
  flex: 1;
  text-align: right;
}

.add-new-input {
  box-sizing: border-box;
  margin: 10px 18px;
}

.add-new-input.warn {
  border: 1px solid var(--dark-sub-theme-color);
}

.counter-modes {
  display: flex;
  margin-bottom: 20px;
  justify-content: space-around;
  text-align: center;
}

.counter-mode.active {
  color: var(--dark-theme-color);
}

.slider {
  margin-left: 0;
}